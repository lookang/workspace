<Code><![CDATA[
cuadx[0]=-1; cuady[0]=0;
cuadx[1]=-1; cuady[1]=1;
cuadx[2]=1; cuady[2]=1;
cuadx[3]=1; cuady[3]=0;

for (int i =0; i<numPointsCirc; i++) {
 circx[i] = Math.cos(Math.PI/(numPointsCirc-1)*i);
 circy[i] = Math.sin(Math.PI/(numPointsCirc-1)*i);
}

calculaPI ();

]]></Code>

